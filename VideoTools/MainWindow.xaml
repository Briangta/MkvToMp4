        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoTools"
        mc:Ignorable="d"
        Title="Mkv to mp4" Height="122" Width="422" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Button x:Name="Convertir" Content="Convert" HorizontalAlignment="Left" Margin="24,50,0,0" VerticalAlignment="Top" Width="75" Click="Convertir_Click"/>
        <TextBox x:Name="RutaArchivo" HorizontalAlignment="Left" Height="20" Margin="24,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="286" IsEnabled="False"/>
        <Button x:Name="Seleccionar" Content="Select File(s)" HorizontalAlignment="Left" Margin="310,19,0,0" VerticalAlignment="Top" Width="75" Click="Seleccionar_Click"/>
        <Label x:Name="Estado" Content="" HorizontalAlignment="Left" Margin="112,44,0,0" VerticalAlignment="Top" Width="273" Height="26"/>
    </Grid>

</Window>
